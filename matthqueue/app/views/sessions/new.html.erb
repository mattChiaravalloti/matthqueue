<p id="alert"><%= alert %></p>

<h1 id="log_in" class="welcome-banner text-center">Sign In</h1>
<hr width="50%">

<center>
  <%= form_tag(login_path, method: 'post', class: 'form-horizontal',  style: 'width:50%') do %>
    <div class='form-group'>
      <%= label_tag :email, 'Email:', class: 'col-md-3 control-label' %>
      <div class='col-md-9'>
        <%= email_field_tag :email, nil, class: 'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <%= label_tag :password, 'Password:', class: 'col-md-3 control-label' %>
      <div class='col-md-9'>
        <%= password_field_tag :password, nil, class: 'form-control' %>
      </div>
    </div>
    <%= submit_tag 'Sign in' %>
  <% end %>
</center>
